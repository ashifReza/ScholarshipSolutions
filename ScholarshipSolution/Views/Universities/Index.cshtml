@model IEnumerable<ScholarshipSolution.Models.University>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10" >
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>University Database</h4>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12 text-right">
                        <div class="dropdown">
                            <a class="btn btn-primary dropdown-toggle" href="~/Universities/Create/" role="button">
                                Add New
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- University Datatable start -->
            <div class="card-box mb-30">
                <div class="pd-20">
                    <h4 class="text-blue h4">Universities</h4>
                </div>
                <div>
                    <table class="table">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.UniName)</th>
                            <th>@Html.DisplayNameFor(model => model.UniRating)</th>
                            <th>@Html.DisplayNameFor(model => model.City)</th>
                            <th>@Html.DisplayNameFor(model => model.Country)</th>
                            <th>Action</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.UniName)</td>
                                <td>@Html.DisplayFor(modelItem => item.UniRating)</td>
                                <td>@Html.DisplayFor(modelItem => item.City)</td>
                                <td>@Html.DisplayFor(modelItem => item.Country)</td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = item.UniID })
                                    @Html.ActionLink("Edit", "Edit", new { id = item.UniID }) 
                                    @Html.ActionLink("Delete", "Delete", new { id = item.UniID })
                                </td>
                            </tr>
                        }

                        
                    </table>
                </div>
            </div>
            <!-- University Datatable End -->
        </div>
    </div>
</div>






















